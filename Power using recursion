// Calculating Power using recursion
#include<iostream>
using namespace std;
int power(int a , int b)
{           
  
    // Base condition
    if(b==0)
    return 1;
         
    return a*power(a,b-1);
}
int main()
{
    int a; 
    int b;
    cout<<"Enter Value : "<<endl;
    cin>>a;
    cout<<"Enter power for the Value : "<<endl;
    cin>>b;
    cout<<power(a,b);
    
    
    return 0;
}
