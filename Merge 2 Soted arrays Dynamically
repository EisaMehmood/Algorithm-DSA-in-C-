// MergeSort 2 Sorted Arrays
#include <iostream>
using namespace std;

void mergeSort(int *arr1 , int n1, int *arr2, int n2)
{
  int len = n1+n2;
  // Dynamically created 
  int * arr = new int[len]; 
  int i =0;
  int a = 0;
  int b = 0;
  
     while(i<len)
     {
      if(arr1[a]<arr2[b])
      {
          arr[i++] = arr1[a++];
        
      }
      else
      {
          arr[i++]= arr2[b++];
     
      }
  }
  
    for(int i =0; i<9 ; i++)
    {
        cout<<arr[i]<<" ";
    }
     delete []arr ;
}

int main() {
    int arr1[4] = {1,3,4,6};
    int arr2[5] = {2,5,7,9,10};
    
    mergeSort(arr1,4,arr2,5);
   
    return 0;
}
